<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ricardofernandes.tohomeresponsavel.MainActivity$PlaceholderFragment">

    <ImageView
        android:layout_height="150dp"
        app:srcCompat="@mipmap/logo_v_2_0"
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnTiraFoto"
        android:layout_toStartOf="@+id/btnTiraFoto" />

    <Button
        android:text="ETAPAS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnEtapas"
        android:elevation="5dp"
        android:background="@color/AppBrown"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/btnTiraFoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"/>

    <Button
        android:text="@string/None"
        android:id="@+id/btnMarcaVisita"
        android:background="@mipmap/visita_icon_v_1_0"
        android:layout_height="100dp"
        android:elevation="12dp"
        android:gravity="top|center_vertical|center_horizontal"
        android:layout_width="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="@string/None"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnTiraFoto"
        android:background="@mipmap/foto_icon_v_1_0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btnSolicitaFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnMarcaVisita"
        android:layout_alignRight="@+id/btnMarcaVisita"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="22dp"
        android:text="Solicita Foto" />

</RelativeLayout>
